#include <stm32f30x.h> // Pull in include files for F30x standard drivers
#include <f3d_led.h> // Pull in include file for the local drivers
#include <f3d_uart.h>
#include <f3d_gyro.h>
#include <f3d_lcd_sd.h>
#include <stdio.h>

#define TIMER 20000


int main(void) {
 
  f3d_gyro_init();
  f3d_uart_init();
  f3d_lcd_init();
  // If you have your inits set up, this should turn your LCD screen red
  f3d_lcd_fillScreen(BLUE);
  int AXIS=75;
  float a[3] = {1.1, 2.2, 3.3};
  int i = 0;
  int j = 0;
 while(1) {
    f3d_gyro_getdata(a);
    int xValue = a[0];
    int yValue = a[1];
    int zValue = a[2];
    //Drawing the bar for X-value      
    if (0 < xValue) {
      i = 10;
      while (i < 40) {
        j = AXIS;
        while (j > AXIS - xValue) {
          f3d_lcd_drawPixel(i, j, RED);
          j = j - 1;
        }
        i = i + 1;
      }
    }

    else {
      i = 10;
      while (i < 40) {
        j = AXIS;
        while (j > AXIS - xValue) {
          f3d_lcd_drawPixel(i, j, RED);
          j = j + 1;
        }
        i = i + 1;
      }
    }
 }
}

#ifdef USE_FULL_ASSERT
void assert_failed(uint8_t* file, uint32_t line) {
/* Infinite loop */
/* Use GDB to find out why we're here */
  while (1);
}
#endif

/* main.c ends here */
